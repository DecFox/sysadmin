<?xml version="1.0"?>
<yandex>
  <logger>
    <!-- Possible levels [1]: - none - fatal - critical - error - warning - notice - information - debug - trace -->
    <level>information</level>
  </logger>
  <display_name>production</display_name>
  <!-- further filtering is done by netfilter -->
  <listen_host>0.0.0.0</listen_host>
  <prometheus>
    <endpoint>/metrics</endpoint>
    <port>9363</port>

    <metrics>true</metrics>
    <events>true</events>
    <asynchronous_metrics>true</asynchronous_metrics>
    <status_info>true</status_info>
  </prometheus>
</yandex>
